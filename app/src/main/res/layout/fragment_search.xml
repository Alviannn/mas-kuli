<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".UI.search.SearchFragment">

    <LinearLayout
        android:id="@+id/headContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        android:orientation="vertical">

        <EditText
            android:id="@+id/search_kuli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@color/white"
            android:drawableStart="@drawable/search"
            android:drawableTint="@color/black"
            android:hint="Daerah"
            android:padding="10dp" />

        <TextView
            android:id="@+id/sort_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_kuli"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="5dp"
            android:text="Urutkan berdasarkan:"
            android:textColor="@color/white" />

        <Button
            android:layout_marginStart="20dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/sort_by_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/white"
            android:text="Rating"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_kuli"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="5dp"
            android:text="Atau atur sesuai budget Anda:"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/minText"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:inputType="number"
                android:textAlignment="center"
                android:hint="Rp Min"/>

            <EditText
                android:id="@+id/maxText"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:inputType="number"
                android:textAlignment="center"
                android:hint="Rp Max"/>

            <Button
                android:layout_marginLeft="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terapkan"
                android:textColor="@color/black"
                android:backgroundTint="@color/gray"
                android:layout_marginBottom="10sp"/>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headContainer">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/kuli_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            tools:listitem="@layout/template_kuli" />

    </ScrollView>

</RelativeLayout>